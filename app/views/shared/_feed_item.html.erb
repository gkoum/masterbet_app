
<li align=left id="<%= feed_item.id %>" class="feed">
  
  <hr class="featurette-divider">
  <div class="row featurette">
    <div class="col-xs-6 .col-md-4">
          
    <% if feed_item.content != nil %>
      <h3><div class="content"><%= wrap(feed_item.content) %></div></h3>
    <% end %>

    <% if feed_item.text != nil %>
      <div class="content"><%= wrap(feed_item.text) %></div>  
    <% end %>
    </div>
    <div class="col-xs-6 .col-md-4">
    <% if feed_item.image_url != nil %>
      <img class="avatar" src=<%= feed_item.image_url(:thumb).to_s %> alt="Avatar">
    <% end %>
    <div class="row" class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    
    <% if current_user?(feed_item.user) %>
      <%= link_to "Διαγραφή σχολίου", feed_item, method: :delete,
              data: { confirm: "Είστε σίγουρος για την διαγραφή του σχολίου;" },
          title: feed_item.content %>
       <%= link_to "Επεξεργασία σχολίου", edit_micropost_path(feed_item) %>
    <% end %>
    </div>
  </div>
  </div>
</li>